#!/bin/bash

icon=/home/hllvc/Documents/Git_Repos/Vaktija_Notification/icon/1200x630wa.png
time=$(cat /home/hllvc/Documents/Git_Repos/Vaktija_Notification/data/prayer_zuhr)
